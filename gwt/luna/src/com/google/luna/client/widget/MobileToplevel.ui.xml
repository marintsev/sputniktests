<ui:UiBinder 
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:l='urn:import:com.google.luna.client.widget'>

  <ui:style src="MobileToplevel.css" />
  <ui:with field='resources' type='com.google.luna.client.widget.ToplevelWidget.Resources'/>

  <g:HTMLPanel addStyleNames='{style.broadCenter}'>
    <g:Label styleName='{style.title}'>Sputnik</g:Label>
    <g:Label ui:field='subtitle' styleName='{style.subtitle}'/>
    <g:HorizontalPanel addStyleNames='{style.tabPane}' spacing='5'>
      <l:TabButton ui:field='aboutButton' addStyleNames='{style.tabButton}' target="about.html">About</l:TabButton>
      <l:TabButton ui:field='runButton' addStyleNames='{style.tabButton}' target="run.html">Run</l:TabButton>
      <l:TabButton ui:field='compareButton' addStyleNames='{style.tabButton}' target="compare.html">Compare</l:TabButton>
    </g:HorizontalPanel>
    <l:FramePanel addStyleNames='{style.contentsFrame}'>
      <l:PageView ui:field='contents'/>
    </l:FramePanel>
  </g:HTMLPanel>

</ui:UiBinder>
